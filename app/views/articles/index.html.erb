<div class="container">
  <div class="row">

    <div class="col s12 m7">
      <% @articles.each do |article| %>
      <div class="card small">
        <div class="card-image">
          <%= image_tag(article.image) %>
          <span class="card-title"><%= article.title.capitalize %></span>
        </div>
        <div class="card-content">
          <p>I am a very simple card. I am good at containing small bits of information.
            I am convenient because I require little markup to use effectively.</p>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<table class="striped centered responsive-table">
      <thead>
      <tr>
        <th>

          <%= link_to "Add", new_article_path, class:"btn-floating btn-large waves-effect waves-light btn" %>

        </th>

      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <div class="row">

              <div class="col s12 m12 l3"><h6></div>
              <div class="col s12 m12 l3">
                <%= link_to "Read it", article_path(article), class:"waves-effect waves-light btn"%>
                <%= link_to "Delete", article_path(article), method: :delete, class:"waves-effect waves-light btn red" %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>

</div>
